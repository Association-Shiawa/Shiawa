{% extends "AppBundle:Cosplay:layout.html.twig" %}

{% block content %}
<main class="col m8">
    <!-- LAST ARTICLES -->
    <div class='row'>
        <div class='col s12'>
            <div class='card z-depth-1' >
                <div class='card-content' >
                    <h2 class='title-section'>Nos derniers articles<small>Un peu de lecture sur le Cosplay !</small></h2>

                    <aside class='row'>

                        {% for article in lastCosplayArticles if article.published == true %}
                            {% if loop.index is odd %}
                                <div class='row'>
                            {% endif %}
                            <div class='col m6 s12'>
                                <div class='article-pw'>
                                    <h5 class='title-article'><a href='{{ path('shiawa_article_view', {'slug': article.slug, 'category': article
                                            .category.name|lower}) }}'>{{ article.title }}</a></h5>
                                    <hr />
                                    <a href='{{ path('shiawa_article_view', {'slug': article.slug, 'category': article
                                        .category.name|lower}) }}'><img src='{{ article.image }}' style='width:100%;
                                    background-size: cover' /></a>
                                </div>
                            </div>
                            {% if loop.index is even %}
                                </div>
                            {% endif %}
                        {% endfor %}

                    </aside>
                    <div class='center'>
                        <a href='{{ path('shiawa_article_list', {'category': 'cosplay'}) }}' class="btn-flat">Voir plus d'articles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}