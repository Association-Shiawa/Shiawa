{% extends "ShiawaUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="container" style="margin-top: 150px;margin-bottom: 150px;">
    <main class="row">
        <h1 class="center-align">Bienvenue sur Shiawa !</h1>
        <section class="col m6 offset-m3">
            <div class="section">
                <div class="row">
                    <div class="col s12 center-align">
                        Nouveau sur Shiawa ? <a href="{{ path('fos_user_registration_register')
                        }}" class="btn-flat pink white-text">S'enregistrer</a>
                    </div>
                </div>
                <div class="z-depth-4 card-panel">
                    {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
                    {% block fos_user_form %}
                        {% if error %}
                            <div class="card-panel red darken-4 white-text">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                            <label for="username">{{ 'security.login.username'|trans }} ou e-mail</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required" />

                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                            <div class="input-field">
                                <input type="submit" id="_submit" name="_submit" class="btn waves-effect waves-light
                                col s6 offset-s3 pink white-text" value="{{ 'security.login.submit'|trans
                                }}" />
                            </div>


                        </form>
                    {% endblock fos_user_form %}
                </div>
            </div>
        </section>
    </main>

</div>
{% endblock %}
