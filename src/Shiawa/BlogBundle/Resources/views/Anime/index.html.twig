{% extends "ShiawaBlogBundle:Article:layout.html.twig" %}

{% block body %}
    <section class="row">
    {% for anime in listAnimes %}

        <div class='col l2 m4 s6'>
            <div class="card">
                <div class="card-image">
                    <img src="{{ anime.image }}">
                    <span class="card-title">{{ anime.title }}</span>
                </div>
                <div class="card-action">
                    <a href="{{ path('shiawa_anime_view', {'slug': anime.slug})
                    }}">Voir {{ anime.title }}</a>
                </div>
            </div>
        </div>

    {% else %}
        Pas (encore !) d'anime
    {% endfor %}
    </section>

    {% if nbPages == 1 %}
    {% else %}
    <ul class="pagination">
        <li class="{%  if page == 1 %}disabled{% endif %}">
            <a href="{{ path('shiawa_anime_list', {'page': page-1}) }}">
                <i class="material-icons">chevron_left</i></a></li>
        {% for p in range(1, nbPages) %}
            <li class="{% if p == page %}active{% else %}waves-effect{% endif %}">
                <a href="{{ path('shiawa_anime_list', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
        <li class="waves-effect {%  if page >= nbPages %}disabled{% endif %}"><a href="{{ path
            ('shiawa_anime_list', {'page': page+1}) }}"><i
                        class="material-icons">chevron_right</i></a></li>
    </ul>
    {% endif %}
{% endblock %}