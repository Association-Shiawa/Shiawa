{% extends "ShiawaBlogBundle:Article:layout.html.twig" %}

{% block body %}
    <section class="row">
    {% for article in listArticles if article.published == true %}

        <div class='col l3 m4 s12'>
            <div class="card">
                <div class="card-image">
                    <img src="{{ article.thumbnail ? asset(article.thumbnail.getWebPath) : article.image }}">
                    <a href="{{ path('shiawa_article_view', {'slug': article.slug, 'category': article.category
                        .slug})}}" class="card-title">
                        {{ article.title }} - {{ article.createdAt|date('d/m/Y') }}
                    </a>
                </div>
                <div class="card-action">
                    <a href="{{ path('shiawa_article_view', {'slug': article.slug, 'category': article.category
                        .slug})}}" class="pink-text text-accent-1">
                        Lire : {{ article.title }}
                    </a>
                </div>
            </div>
        </div>

    {% else %}
        Pas (encore !) d'article
    {% endfor %}
    </section>

    {% if nbPages == 1 %}
    {% else %}
    <ul class="pagination">
        <li class="{%  if page == 1 %}disabled{% endif %}">
            <a href="{{ path('shiawa_article_list', {'page': page-1, 'category': category.name}) }}">
                <i class="material-icons">chevron_left</i></a></li>
        {% for p in range(1, nbPages) %}
            <li class="{% if p == page %}active{% else %}waves-effect{% endif %}">
                <a href="{{ path('shiawa_article_list', {'page': p, 'category': category.name}) }}">{{ p }}</a>
            </li>
        {% endfor %}
        <li class="waves-effect {%  if page >= nbPages %}disabled{% endif %}"><a href="{{ path
            ('shiawa_article_list', {'page': page+1, 'category': category.name}) }}"><i
                        class="material-icons">chevron_right</i></a></li>
    </ul>
    {% endif %}
{% endblock %}