{% extends "ShiawaBlogBundle:Formation:layout.html.twig" %}

{% block body %}
    <section class="row">
        {% for formation in listFormations %}

            <div class='col l3 m4 s12'>
                <div class="card">
                    <div class="card-image">
                        {#<img src="{{ article.thumbnail ? asset(article.thumbnail.getWebPath) }}">#}
                        <a href="{{ path('shiawa_formation_view', {'slug': formation.slug, 'category': formation.category.slug} ) }}" class="card-title">
                            {{ formation.title }} - {{ formation.createdAt|date('d/m/Y') }}
                        </a>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('shiawa_formation_view', {'slug': formation.slug, 'category': formation.category.slug} ) }}" class="pink-text text-accent-1">
                            Lire : {{ formation.title }}
                        </a>
                    </div>
                </div>
            </div>

        {% else %}
            Pas (encore !) de tutoriel
        {% endfor %}
    </section>

    {% if nbPages == 1 %}
    {% else %}
        <ul class="pagination">
            <li class="{%  if page == 1 %}disabled{% endif %}">
                <a href="{{ path('shiawa_formation_list', {'page': page-1}) }}">
                    <i class="material-icons">chevron_left</i></a></li>
            {% for p in range(1, nbPages) %}
                <li class="{% if p == page %}active{% else %}waves-effect{% endif %}">
                    <a href="{{ path('shiawa_formation_list', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
            <li class="waves-effect {%  if page >= nbPages %}disabled{% endif %}"><a href="{{ path
                ('shiawa_formation_list', {'page': page+1}) }}"><i
                            class="material-icons">chevron_right</i></a></li>
        </ul>
    {% endif %}


    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% if is_granted('ROLE_AUTHOR') %}
            <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
                <a class="btn-floating btn-large pink lighten-2" href="{{ path("shiawa_formation_create") }}">
                    <i class="large material-icons">add</i>
                </a>
            </div>
        {% endif %}
    {% endif %}

{% endblock %}